{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string"
    },
    "Description": {
      "type": "text"
    },
    "Date": {
      "type": "date"
    },
    "Time": {
      "type": "time"
    },
    "Location": {
      "type": "string"
    },
    "isPaid": {
      "type": "boolean"
    },
    "EventBriteURL": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "isPaid"
            },
            true
          ]
        }
      }
    }
  }
}
