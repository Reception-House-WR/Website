{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "time": {
      "type": "text",
      "required": true
    },
    "location": {
      "type": "string",
      "required": true
    },
    "isPaid": {
      "type": "boolean",
      "required": true
    },
    "eventBriteURL": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "isPaid"
            },
            true
          ]
        }
      }
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images", "files", "videos", "audios"]
    }
  }
}
